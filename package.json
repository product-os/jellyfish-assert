{
  "name": "@balena/jellyfish-assert",
  "version": "1.2.24",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-assert.git"
  },
  "engines": {
    "node": ">=12.15.0"
  },
  "description": "Assert library for Jellyfish",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/"
  ],
  "directories": {
    "lib": "lib"
  },
  "deplint": {
    "files": [
      "lib/**/*.{ts}"
    ],
    "modules": [
      "lib"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "balena-lint --fix"
    ]
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "lint": "balena-lint lib test && deplint",
    "lint:fix": "balena-lint --fix lib test",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "jest",
    "doc": "typedoc lib/ && touch docs/.nojekyll",
    "prepack": "npm run build"
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "Apache-2.0",
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@balena/jellyfish-config": "^2.0.3",
    "@balena/lint": "^6.2.0",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.181",
    "deplint": "^1.1.3",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "simple-git-hooks": "^2.7.0",
    "ts-jest": "^27.1.4",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "versionist": {
    "publishedAt": "2022-04-11T14:42:35.238Z"
  }
